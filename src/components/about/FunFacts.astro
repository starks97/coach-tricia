---
import Gallery from "./Gallery.astro"

import data from "../../data.json"

const funFacts = data["about"]["fun-facts"]
---

<div class="box mx-auto mt-20 h-auto p-10">
	<div class="tablet:grid-cols-2 grid h-auto grid-cols-1 justify-center justify-items-center">
		<div class="justify-self-end">
			<h1
				class="font-blackstone tablet:text-start text-size-7 tablet:text-size-6 laptop:text-[4rem] tablet:hidden text-light-rose mb-10 w-full text-center font-bold"
			>
				Fun Facts About Me!
			</h1>
			<Gallery />
		</div>
		<div class="mt-5 flex w-full flex-col">
			<h1
				class="font-blackstone tablet:text-start text-size-6 tablet:text-size-6 laptop:text-[3.5rem] tablet:[display:flex] text-light-rose mb-10 hidden w-full text-center font-bold"
			>
				Fun Facts About Me!
			</h1>

			<ul class="laptop:max-w-xl w-full space-y-10">
				{
					funFacts.map((item, index) => (
						<div class="border-light-rose flex flex-row items-center justify-center gap-5 border-b-2 last:border-0">
							<span class="text-size-7 font-prata w-2/12 font-bold text-[#e6dbd4]">
								0{index + 1}
							</span>
							<li
								value={index + 1}
								class="font-tajawal text-size-3 tablet:text-size-3 laptop:text-[22px] w-full text-start text-black"
							>
								{item.title}
							</li>
						</div>
					))
				}
			</ul>
		</div>
	</div>
</div>

<style>
	.box {
		background: linear-gradient(to left, #fbf4f2 60%, #ffff 60%);
	}
	@media (max-width: 768px) {
		.box {
			background: white;
		}
	}
</style>
