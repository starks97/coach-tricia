---
const resources = [
	{ name: "Home", href: "/" },
	{ name: "Coaching", href: "/coaching" },
	{ name: "About", href: "/about" },
	{ name: "Podcast", href: "/podcast" },
	{ name: "Contact", href: "/contact" },
]

const socialLinks = [
	{ name: "Facebook", icon: "/icons/facebook.svg", href: "https://facebook.com" },
	{ name: "Instagram", icon: "/icons/instagram.svg", href: "https://instagram.com" },
	{ name: "Twitter", icon: "/icons/twitter.svg", href: "https://twitter.com" },
	{ name: "LinkedIn", icon: "/icons/linkedin.svg", href: "https://linkedin.com" },
]
---

<footer class="py-12">
	<div
		class="container mx-auto flex flex-col items-start justify-between gap-12 px-5 laptop:flex-row"
	>
		<!-- Left Section: Title and Logo -->
		<div class="max-w-md space-y-6">
			<h3 class="text-xl font-bold leading-tight tablet:text-2xl">
				Mindset & confidence coaching for women who are looking to create the life and business of
				their dreams.
			</h3>
			<img src="/images/logo.png" alt="Logo" class="h-auto w-32" />
		</div>

		<!-- Center Section: Resources -->
		<nav class="space-y-4 text-lg">
			<h4 class="text-xl font-bold">Resources</h4>
			<ul class="space-y-2">
				{
					resources.map((resource) => (
						<li>
							<a href={resource.href} class="hover:text-pink-500 transition-colors duration-300">
								{resource.name}
							</a>
						</li>
					))
				}
			</ul>
		</nav>

		<!-- Right Section: Social Media -->
		<div class="space-y-4">
			<h4 class="text-xl font-bold">Follow Us</h4>
			<ul class="flex flex-col gap-4">
				{
					socialLinks.map((link) => (
						<li>
							<a
								href={link.href}
								target="_blank"
								rel="noopener noreferrer"
								class="hover:text-pink-500 flex items-center gap-4 text-lg transition-colors duration-300"
							>
								<img src={link.icon} alt={link.name} class="h-8 w-8" />
								{link.name}
							</a>
						</li>
					))
				}
			</ul>
		</div>
	</div>
</footer>
