---
interface Props {
	href: string
	slot?: string
}

const { href, slot } = Astro.props
---

<a
	slot={slot}
	href={href}
	class="font-tajawal text-taupe mb-2 border-2 px-5 py-2.5 text-center text-xl font-extrabold tracking-[0.07em] uppercase"
	x-data="{ intersect: false }"
	x-intersect:enter="intersect = true"
	x-intersect:leave="intersect = false"><slot /></a
>
