---
import data from "../../data.json"

const testimonials = data.home["user_pain_points"].testimonials

---

<!-- Testimonial Card with Responsive Height and Adaptable Content -->
<div
	class="bg-soft-beige mx-auto flex h-auto w-full max-w-lg flex-col items-center justify-center gap-6 rounded-lg p-8 shadow-md"
>
	{testimonials.map((item) => (<h3
		class="font-prata mobile:text-2xl tablet:text-size-4 laptop:text-size-5 tablet:leading-8 laptop:leading-10 text-center text-lg font-semibold text-black"
	>
		{item.title}
	</h3>
	<p
		class="font-tajawal mobile:text-lg tablet:text-size-2 laptop:text-size-3 text-justify text-base text-black"
	>
		{item.quote}
	</p>
	<p class="font-tajawal mobile:text-lg tablet:text-xl text-center text-base text-black">
		{item.author}
	</p>))}
</div>
