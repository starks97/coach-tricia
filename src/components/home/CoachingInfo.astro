---
import data from "../../data.json";

const title = data["home"].coaching_info.title;
const subtitle = data["home"].coaching_info.subtitle;
const image = data["home"].coaching_info.image;
const description = data["home"].coaching_info.description;
---
<div class="general-layout bg-btn_color">
    <div class="flex flex-col gap-5 items-center tablet:items-start w-full max-w-lg mx-auto">
        <h3 class="text-custom_title font-bold text-left w-full font-prata text-hero_color2">{title}</h3>
        <p class="pain-points leading-14 text-left w-full font-tajawal uppercase font-bold ">{subtitle}</p>
        <p class="text-lg text-left w-full font-tajawal">{description}</p>
        <div>
            <button class="btn ">
                <a href="/coaching" class="font-tajawal uppercase pain-points text-hero_bg font-extrabold">learn more..</a>
            </button>
        </div>
    </div>
    <div class="flex flex-col justify-center items-center px-5">
        <img src={image} alt="Laravel" class="w-auto h-full tablet:w-96 tablet:h-96 object-cover">
    </div>
</div>
