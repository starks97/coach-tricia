---
import Testimonials from "./Testimonial.astro";

import data from "../../data.json";
const title = data.home["user_pain_points"].tittle;
const subttitle = data.home["user_pain_points"].subtitle;
const list = data.home["user_pain_points"].pain_points;

---
<div class="grid grid-cols-1 md:grid-cols-2 gap-5 bg-hero_bg mx-auto items-center min-h-screen p-5 md:p-10 lg:p-15">
    <div class="flex flex-col gap-5 items-center md:items-start w-full max-w-lg mx-auto">
           <h2 class="font-prata text-3xl md:text-4xl lg:text-4xl text-center md:text-left leading-15 ">
               {title}
           </h2>

           <h3 class="font-prata text-xl md:text-2xl lg:text-3xl text-center md:text-left text-hero_color2">
               {subttitle}
           </h3>

           {list.map((item, index) => (<li class="flex items-start m-2">
                   <svg
                       xmlns="http://www.w3.org/2000/svg"
                       viewBox="0 0 512 512"
                       class="w-10 h-10 text-hero_color flex-shrink-0 mt-1"
                       fill="currentColor"
                       aria-hidden="true"
                   >
                       <path d="M405 136.798L375.202 107 256 226.202 136.798 107 107 136.798 226.202 256 107 375.202 136.798 405 256 285.798 375.202 405 405 375.202 285.798 256"></path>
                   </svg>
                   <span class="ml-4 pain-points font-semibold leading-14 font-tajawal uppercase " >
                      {item}
                   </span>
            </li>))}
    </div>
    <div class="flex justify-center">
        <Testimonials />
    </div>
</div>
