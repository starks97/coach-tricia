---
import Form from "./Form.astro"

import data from "../../data.json"

const contact = data.contact["contact-form"]
const image = data["home"].coaching_info.image
---

<div
	class="mx-auto grid grid-cols-1 items-center gap-5 p-5 tablet:grid-cols-2 tablet:p-10 laptop:p-14"
>
	<div class="mx-auto w-full max-w-lg items-center gap-5 space-y-5 tablet:items-start">
		{
			contact.map((ele) => (
				<div class="mx-auto w-full max-w-lg items-center gap-5 space-y-5 tablet:items-start">
					<h4 class="text-center font-tajawal text-lg font-semibold uppercase leading-9 tablet:normal-case">
						{ele.title}
					</h4>
					<p class="text-center">{ele.subtitle}</p>
				</div>
			))
		}
		<div class="hidden flex-col items-center justify-center px-5 tablet:flex">
			<img src={image} alt="foots images" class="h-40 w-full object-cover" />
		</div>
	</div>

	<div>
		<Form />
	</div>
</div>
